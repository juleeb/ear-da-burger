<h1>Eat Da Burgers</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h2>What Is Your Burger List</h2>
                    {{#each burgers}}
                    {{#unless this.devoured}}
                        {{> burgers/burger-block}}
                    {{/unless}}
                    {{/each}}
            </div>
            <div class="col-6">
                <h2>Eatened Burger List</h2>
                    {{#each burgers}}
                    {{#if this.devoured}}
                        {{> burgers/burger-block}}
                    {{/if}}
                    {{/each}}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h2>Add New Burger</h2>
                <form class="create-form">
                    <div class="form-group">
                        <label for="name"></label>
                        <textarea id="name" name="burger_name" placeholder="What burger do you want to eat?"></textarea>
                    </div>
                    <button type="submit">Add Burger</button>
                </form>
            </div>
        </div>
    </div>
</main>